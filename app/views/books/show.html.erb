<% if notice.present? %>
<p id="notice" class="alert alert-info" role="alert"><%= notice %></p>
<% end %>

<%= form_with(model: @book) do |form| %>
<div class="form-group">
<center>
<img alt="cover_image" class="img-thumbnail" src="<%= @book.cover %>">
</center>
</div>
<div class="form-group">
  <%= form.label :title %>
  <%= form.text_field :title, class: "form-control",:disabled => true %>
</div>

<div class="form-group">
  <%= form.label :author %>
  <%= form.text_field :author, class: "form-control",:disabled => true %>
</div>

<div class="form-group">
  <%= form.label :description %>
  <%= form.text_area :description, class: "form-control",:disabled => true %>
</div>
<% end %>

<%= link_to 'Back', books_path, class: "btn btn-info" %>
