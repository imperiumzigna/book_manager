 <% if notice.present? %>
<p id="notice" class="alert alert-info" role="alert"><%= notice %></p>
<% end %>
<h1>Books</h1>

<div class="container mb-5">
<%= search_form_for @search, :remote => true do |f| %>
<div class="input-group">
<%= f.search_field :title_or_description_or_author_cont, class: "form-control" %>
  <div class="input-group-append">
  <%= f.submit "search", class: "btn btn-info"  %>
  </div>
</div>
<% end %>
</div>
<% if policy(Book).create? %>
<div class="container mb-5 d-flex justify-content-end">
<%= link_to "New Book", new_book_path, class: "btn btn-success" %>
</div>
<% end %>
<div id="book-container"><%= render 'table' %></div>
