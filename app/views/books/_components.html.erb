
<div class="container mb-5">
<%= search_form_for @search do |f| %>
<div class="input-group">
<%= f.search_field :title_or_description_cont, class: "form-control" %>
  <div class="input-group-append">
  <%= f.submit "search", class: "btn btn-info"  %>
  </div>
</div>
<% end %>
</div>

<table class="table table-striped table-bordered table-condensed table-hover">
  <thead>
    <tr>
    <th class="component_title_header_col"><%= sort_link @search, :title, "Title", {}, { :remote => true, :method => :get } %></th>
    <th class="component_description_header_col"><%= sort_link @search, :description, "Description", {}, { :remote => true, :method => :get } %></th>
    <th>Cover</th>
    <th class="action_col"></th>
    </tr>
  </thead>
<tbody>
  <% @component.each do |component| %> 
  <tr>
  <td class="component_title_body_col"><%= component.title %></td>
  <td class="component_description_body_col"><%= component.description %></td>
  <td><img alt="cover_image" class="img-thumbnail" src="<%= component.cover %>" /></td>
  <td><%= link_to "Details",books_path(component) %></td>
  </tr>
  <% end %>
</tbody>
</table>
<%= paginate @component %>